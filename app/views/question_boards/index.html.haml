%h1= "#{QuestionBoard.model_name.human}の一覧"

.container.mt-3.mb-3
  - if @boards.any?
    %ul.list-group
      %li.list-group-item
        .row
          .col-md-8
            = QuestionBoard.human_attribute_name :title
          .col-md-4
            = QuestionBoard.human_attribute_name :created_at
      - @boards.each do |board|
        %li.list-group-item
          .row
            .col-md-8
              = link_to board.title, question_board_path(board)
            .col-md-4
              = l(board.created_at, format: :default)
  - else
    = link_to "#{QuestionBoard.model_name.human}を作成", new_question_board_path
    して1on1をはじめましょう:)

%footer.container
  = link_to "#{QuestionBoard.model_name.human}の作成", new_question_board_path
  = link_to "#{AnswerBoard.model_name.human}の一覧へ", answer_boards_path
  = link_to 'ログアウト', destroy_user_session_path, method: :delete
